doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properities
    title 社社相关
    link(href='http://fonts.useso.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/semantic.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/homepage.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/topbar.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/clubManger.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/newEvent.css')
    script(src='/javascripts/jquery-1.11.2.js')
    script(src='/javascripts/semantic.js')
    script(src='/javascripts/newClub.js')
  body#home
    .following.bar.light.fixed
      .insideTopBar
        .column
          .ui.logo.shape
            .sides
              .ui.side.active
                img.ui.image(src='')
          if user
            #topButton(calss='ui right float')
              #second.ui.left.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/logout') logout

          else
            #topButton(calss='ui right float')
              #second.ui.left.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/signup') 注册
              .ui.right.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/login') 登录
          .bar.ui.large.secondary.network.menu.center
            a#fontLogo.center
              img(src='/images/fontlogo.png', alt='社社相关', height='42', width='120')
    .mainpage
      .bar.mainpage
        .insideMainpageBar
          .ui.two.column.center.aligned.stackable.divided.grid
            .column
              button.ui.button 活动
            .column
              button.ui.button 社团
      .clubManger
        .ui.grid
          .left.floated.twelve.wide.column
            #newLeft.ui.page.grid.stackable.relaxed.feature.segment
              .row
                .column
                  h1.center.aligned.ui.header
                    | 新建社团
              .row
                .right.floated.six.wide.column
                  p 上传图片
                  img.ui.massive.bordered.image(src='')
                  form#newClub(action='/createclub', method='post', enctype="multipart/form-data")
                    input#newClubLogo(required='required', type='file', name='logo')
                    input#newClubName(required='required', type='text', name='name', hidden='')
                    input#newClubDesciption(required='required', type='text', name='description', hidden='')
                    input#newClubPhone(required='required', type='text', name='phone', hidden='')
                    input#newClubEmail(required='required', type='text', name='email', hidden='')
                    input#newClubUsername(required='required', type='text', name='username', hidden='')
                    input#newClubPassword(required='required', type='password', name='password', hidden='')
                .ten.wide.column
                  #form_content.fr-widget.fr-grid.fr_content
                    #newLeftColumn1.column
                      .ui.form.segment
                        .loginForm
                          .field
                            label 社团名称
                            .ui.left.icon.input
                              input(required='required', type='text', name='name', id= 'clubName')
                          .field
                            label 社团简介
                            .ui.left.icon.input
                              input(required='required', type='text', name='description', id='clubDesciption')
                          .field
                            label 联系电话
                            .ui.left.icon.input
                              input(required='required', type='text', name='phone', id='clubPhone')
                          .field
                            label email
                            .ui.left.icon.input
                              input(required='required', type='text', name='email', id='clubEmail')
                          .field
                            label 管理员账号
                            .ui.left.icon.input
                              input(required='required', type='text', name='username',id='clubUsername')
                          .field
                            label 密码
                            .ui.left.icon.input
                              input(required='required', type='password', name='password', id='clubPassword')
                .ui.inverted.section.divider
                .row
                  #button.ui.basic.animated.button.button
                    .visible.content 新建社团
                    .hidden.content
                      i.right.arrow.icon
          .right.floated.four.wide.column
            .ui.animated.selection.list
              .ui.fluid.card
                .image
                  img(src='/images/jenny.jpg')
                .content
                  a.header(href='./clubManager.html') 不想写作业社
              .ui.section.divider
              .item
                a(href='/club/admin/publish') 发布新活动
              //- .item
              //-   a(href='#') 管理活动
              .item
                a(href='/club/admin/clubComment') 收到的评论
              .item
                a(href='/club/admin/modifyClubData') 完善社团资料